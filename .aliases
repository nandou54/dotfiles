alias reload="source $ZDOTDIR/.zshrc"
alias reload-aliases="source $ZDOTDIR/.aliases && abbr import-aliases"
alias reload-plugins="antibody bundle < $ZDOTDIR/.zsh_plugins.txt > $ZDOTDIR/.zsh_plugins.sh && source $ZDOTDIR/.zsh_plugins.sh"
alias zsh-config="nano $ZDOTDIR/.zshrc && reload"
alias zsh-aliases="nano $ZDOTDIR/.aliases && reload-aliases"
alias zsh-plugins="nano $ZDOTDIR/.zsh_plugins.txt && reload-plugins"

google(){
  open "https://google.com/search?q=$1"
}

timezsh(){
  shell=${1-$SHELL}
  for i in $(seq 1 4); do /usr/bin/time $shell -i -c exit; done
}

